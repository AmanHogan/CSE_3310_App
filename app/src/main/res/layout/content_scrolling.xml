<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_layout_bottom"
    android:onClick="openFindService"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomeActivity"
    tools:showIn="@layout/activity_home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerPadding="10dp"
            android:orientation="vertical"
            android:padding="15dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="5sp"
                        app:cardBackgroundColor="#0496D8"
                        app:cardCornerRadius="25dp"
                        app:layout_columnWeight="0">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawableLeft="@drawable/ic_baseline_home_24"
                            android:drawablePadding="5dp"
                            android:text="Place your Service"
                            android:textAlignment="viewStart"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/place_service_button"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:onClick="openPlaceService"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:translationX="0dp"
                            android:translationY="0dp"
                            app:cornerRadius="10dp" />

                    </androidx.cardview.widget.CardView>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="346dp"
                        android:layout_height="60dp"
                        android:layout_margin="5sp"
                        app:cardBackgroundColor="#047AAF"
                        app:cardCornerRadius="25dp"
                        app:layout_columnWeight="0">

                        <Button
                            android:id="@+id/order_hist_button"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:onClick="openActivityOrder"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:translationX="0dp"
                            android:translationY="0dp"
                            app:cornerRadius="10dp" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawableLeft="@drawable/ic_baseline_receipt_24"
                            android:drawablePadding="5dp"
                            android:text="Order and Payment History"
                            android:textAlignment="textStart"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                    </androidx.cardview.widget.CardView>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="5sp"
                        app:cardBackgroundColor="#066D9C"
                        app:cardCornerRadius="25dp"
                        app:layout_columnWeight="0">

                        <TextView
                            android:id="@+id/textView301"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawableLeft="@drawable/ic_baseline_search_24"
                            android:drawablePadding="5dp"
                            android:text="Search for Vendors"
                            android:textAlignment="textStart"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/find_service_button"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:onClick="openFindService"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:translationX="0dp"
                            android:translationY="0dp"
                            app:cornerRadius="10dp" />
                    </androidx.cardview.widget.CardView>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="5sp"
                        app:cardBackgroundColor="#055E87"
                        app:cardCornerRadius="25dp"
                        app:layout_columnWeight="0">

                        <TextView
                            android:id="@+id/textView300"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawableLeft="@drawable/ic_baseline_miscellaneous_services_24"
                            android:drawablePadding="5dp"
                            android:text="Settings"
                            android:textAlignment="textStart"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/open_setting_button"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:onClick="openSettings"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:translationX="0dp"
                            android:translationY="0dp"
                            app:cornerRadius="10dp" />
                    </androidx.cardview.widget.CardView>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="5sp"
                        app:cardBackgroundColor="#024A6A"
                        app:cardCornerRadius="20dp" >

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:drawableLeft="@drawable/ic_baseline_handshake_24"
                            android:drawablePadding="5dp"
                            android:text="Accept a Service"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/button6"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:onClick="openAcceptService" />
                    </androidx.cardview.widget.CardView>
                </TableRow>

            </TableLayout>

        </LinearLayout>

    </ScrollView>
</androidx.core.widget.NestedScrollView>